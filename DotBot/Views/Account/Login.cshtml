@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="form-container">
    <div class="form-header">
        <h1>Iniciar Sesión</h1>
    </div>

    <form asp-controller="Account" asp-action="Login" method="post">

        <div class="input-group">
            <label for="email">Correo electrónico</label>
            <input asp-for="Email" type="email" placeholder="ejemplo@correo.com" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="input-group">
            <label for="password">Contraseña</label>
            <input asp-for="Password" type="password" id="password" placeholder="Tu contraseña" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <button type="submit" class="btn-form">Iniciar Sesión</button>

        <div class="link">
            ¿No tienes una cuenta? <a asp-action="Register">Regístrate aquí</a>
        </div>
    </form>
</div>

